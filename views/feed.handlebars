
<nav>
    <div class="container">
        <h2 class="log">
            NFT Collect
        </h2>
        <div class="search-bar">
            <i class="uil uil-search"></i>
            <input type="search" placeholder="Search For NFT Collectors">
        </div>
        <div class="create">

            <div class="profile-photo">
                <img
                    src="https://www.kindpng.com/picc/m/451-4517876_default-profile-hd-png-download.png">

            </div>
        </div>
    </div>
</nav>
<!-- MAIN -->
<main>
    <div class="container">
        <!-- LEFT -->
        <div class="left">
            <a class="profile">
                <div class="profile-photo">
                    <img
                        src="https://www.kindpng.com/picc/m/451-4517876_default-profile-hd-png-download.png">
                </div>
                <div class="handle">
                    <h4>{{user_id.name}} </h4>
                    {{!-- <h4>NFT Billionaire</h4> --}}
                    {{!-- <p class="text-muted">
                        @NFTGuy
                    </p> --}}
                </div>
            </a>

            <!-- SIDEBAR -->
            <div class="sidebar">
                <a class="menu-item active">
                    <span><i class="uil uil-home"></i></span>
                    <h3>Feed</h3>
                </a>
                <a class="menu-item" id="theme">
                    <span><i class="uil uil-palette"></i></span>
                    <h3>Theme</h3>
                </a>
                <div id="logout" class="menu-item">
                    <span><i class="uil uil-sign-out-alt"></i></i></span>
                    <h3>Sign Out</h3>
                </div>
            </div>
            <!-- END OF SIDEBAR -->
        </div>
        <!-- END OF LEFT -->
        <!-- MIDDLE -->
        <div class="middle">
            <!--Posts-->
            <div class="feeds">
                {{#each collects as | data |}}
                <div class="feed">
                    <div class="head">
                        <div class="user">
                            <div class="profile-photo">
                                <img src="{{data.imageTag}}" "{{user_id.name}}" > 

                            </div>
                            <div>
                                <h3>{{user.userName}}</h3>
                                <small>{{data.collectName}} on {{format_date data.dateCreated}}</small>

                            </div>
                        </div>
                        <span class="edit">
                            <i class="uil uil-ellipsis-h"></i>
                        </span>
                    </div>


                    <div class="photo">
                        <img src="{{data.imageTag}}">
                    </div>


                    <div class="action-buttons">
                        <div class="interaction-buttons">
                            <span><i class="uil uil-heart"></i></span>
                            <span><i class="uil uil-comment-dots"></i></span>
                        </div>
                    </div>
                    <div class="caption">

                        <p><b>{{data.collectName}} by {{user.userName}} </b> {{data.content}} {{user_id.id}}<span
                                class="harsh-tag">#mynft</span></p>
                                {{#each data.comments as |comment|}}
                           <p>{{comment.content}} - <b>{{comment.user.userName}}</b></p> 
                           {{/each}} 

                    </div>
                    <form class="create-post" id = 'create-comment'>
                        <div class="profile-photo">
                            <img src="https://www.kindpng.com/picc/m/451-4517876_default-profile-hd-png-download.png">
                        </div>
                        <input type="text" placeholder="Type your comment" id="create-comment">

   
                        

                        <button data-collectid="{{data.id}}" class= "commentBtn btn btn-primary">Comment</button> 
                  
                    </form>
                </div>
                {{/each}}
            </div>
        </div>
        <!-- End of Middle Collumn -->

        <!-- RIGHT  -->
        <div class="right">
            <div class="messages">
                <div class="heading">
                </div>
                <!-- Upload photo form -->
                <div class="search-bar">
                    <form action="/api/collects/" method="POST" encType="multipart/form-data" id="search">
                        <h3>Upload New Photo</h3>
                        <input type="file" name="sampleFile" accept="image/*" id="fileBtn" />
                        <label id="fileBtnLabel" for="fileBtn"><i class="uil uil-upload"></i>Choose File </label>
                        <br>
                        <span>
                            <strong id="file-name">Chosen File:</strong>
                            <span id="file-name-file">None</span>
                        </span>
                        <br>
                        <textarea type="textarea" name="description" id="textDesc" placeholder="Type Description Here"></textarea>
                        <hr>
                        <textarea type="textarea" name="uploadTitle" id="uploadTitle" placeholder="Insert Title"></textarea>
                        <br>
                        <input type="submit" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</main>

<!-- THEME CUSTOMIZATION -->
<div class="theme">
    <div class="card">
        <h2>Change apperance of application</h2>
        <p class="text-muted">Change your font size, color, and background.</p>

        <!-- FONT SIZES -->
        <div class="font-size">
            <h4>Font Size</h4>
            <div>
                <h6>Aa</h6>
                <div class="choose-size">
                    <span class="font-size-1"></span>
                    <span class="font-size-2"></span>
                    <span class="font-size-3"></span>
                    <span class="font-size-4"></span>
                    <span class="font-size-5"></span>
                </div>
                <h3>Aa</h3>
            </div>
        </div>

        <!-- PRIMARY COLORS -->
        <div class="color">
            <h4>Color</h4>
            <div class="choose-color">
                <span class="color-1 active"></span>
                <span class="color-2"></span>
                <span class="color-3"></span>
                <span class="color-4"></span>
                <span class="color-5"></span>
            </div>
        </div>

        <!-- BACKGROUND COLORS -->
        <div class="background">
            <h4>Background</h4>
            <div class="choose-bg">
                <div class="bg-1 active">
                    <span></span>
                    <h5 for="bg-1">Light</h5>
                </div>
                <div class="bg-2">
                    <span></span>
                    <h5>Dim</h5>
                </div>
                <div class="bg-3">
                    <span></span>
                    <h5 for="bg-3">Lights Out</h5>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="./js/comments.js"></script>

